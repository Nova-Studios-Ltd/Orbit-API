{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MainDatabase": "server=localhost;port=3306;database=NovaChatUsers;user=nova;password=17201311;",
    "ChannelMessages": "server=localhost;port=3306;database=NovaChatChannels;user=nova;password=17201311;"
  },
  "SQLServerConfig": {
    "AutoConfig": true,
    "Server": "novaapi_mysql",
    "Port": "3306",
    "User": "root",
    "Password": "17201311",
    "UserDatabaseName": "NovaChatUsers",
    "ChannelDatabaseName": "NovaChatChannels",
    "MasterDatabaseName": "NovaChatMaster"
  },
  "GeneralServerConfig": {
    "APIDataDirectory" : "/var/www/asp.net",
    "API_Domain": "api.novastudios.uk"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*:/Auth/*",
        "Period": "1s",
        "Limit": 2
      },
      {
        "Endpoint": "get:/Channel/*/Messages/*",
        "Period": "1s",
        "Limit": 30
      },
      {
        "Endpoint": "((post)|(put)|(delete)):/Channel/*/Messages",
        "Period": "5s",
        "Limit": 10
      },
      {
        "Endpoint": "((get)|(head)):/Proxy",
        "Period": "1s",
        "Limit": 10
      },
      {
        "Endpoint": "((get)|(head)):((/Channel/*/Icon)|(/User/*/Avatar))",
        "Period": "1s",
        "Limit": 10
      },
      {
        "Endpoint": "post:((/Channel/*/Icon)|(/User/*/Avatar))",
        "Period": "5s",
        "Limit": 1
      },
      {
        "Endpoint": "((get)|(head)):/Channel/*/*",
        "Period": "1s",
        "Limit": 10
      },
      {
        "Endpoint": "post:/Channel/*",
        "Period": "1s",
        "Limit": 10
      }
    ]
  }
}
